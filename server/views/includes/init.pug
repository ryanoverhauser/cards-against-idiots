#init(ng-hide='main.initialized')
    form.init-form.form-inline(name='main.user')
        .form-group
            input.form-control.input-lg(
                type='text',
                required,
                maxlength='20',
                placeholder='Choose a nickname',
                ng-model='main.user.name',
                ng-maxlength="20"
            )
        button.btn.btn-lg.btn-success(
            ng-click='main.init()', 
            ng-disabled='main.user.$invalid'
        ) Go!